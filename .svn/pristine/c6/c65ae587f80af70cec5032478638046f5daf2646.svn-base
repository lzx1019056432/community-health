#navbar {
	background-color: #2EC561;
}

.logo {
	width: 317px;
	position: absolute;
	margin-top: -100px;
}

#footer {
	height: 100px;
	background-color: #737373;
}

.navbar-li {
	margin: 2px 15px;
}

.navbar-li:hover {
	background-color: #76E041;
	transition: .7s;
}

.navbar-li-right{
	margin-top: 2px;
}

.navbar-li-right:hover {
	background-color: #00dd11;
	transition: .7s;
}

#btn-choose:default {
	background-color: #37CF6B;
	color: white;
	border-color: #37CF6B;
}

#btn-choose:hover {
	background-color: #37CF6B;
	color: white;
	border-color: #37CF6B;
}

.footer {
	margin-top: 260px;
	color: #333;
	height: 40px;
}

.ft-up{
	padding: 5px ;
	text-align: center;
}
.ft-down{
	color: #CFCFCF;
	text-align: center;
}

.footer a{
	color: white;
	font-size: 18px;
}
.footer a:hover{
	color: white;
	text-decoration: none;
}

.page {
	text-align: center;
}

.card {
	border: #8C8C8C 1px solid;
	border-radius: 7px;
	box-shadow: 3px 3px 1px #ADADAD;
	margin: 10px 0;
	padding: 10px 0;
}

.card img {
	border-radius: 5px;
	transition: .7s;
}

.card img:hover {
	transform: scale(1.2);
	overflow: hidden;
}

.card:hover {
	transition: .3s;
	box-shadow: 3px 3px 1px #FF6600;
}

.card-title {
	font-size: 25px;
	font-weight: 500;
	text-align: center;
	margin: 30px 0;
}

.card-title a {
	color: black;
}

.card-title a:hover {
	color: #00DD11;
	text-decoration: none;
	transition: .3s;
}

.c-m-list {
	margin: 20px 0;
}

.c-m-list i {
	width: 26px;
}

.c-m-font {
	font-size: 17px;
	font-family: "微软雅黑light";
}

.card-rank {
	font-size: 20px;
	font-weight: bold;
	font-family: "黑体";
	text-align: right;
	color: #FF6600;
	margin-top: 25px;
}


/*注册页面所用css*/

.all-content {
	height: 311px;
	font-family: "微软雅黑";
	font-size: 15px;

	margin-top: 50px;
}

.side-intro {
	margin-top: 170px;
	margin-left: -30px;
}



/*knowledge页面*/
.kno-ad{
	margin-top: 42px;
}
.kno-ad img{
	width: 400px;
	margin: 10px 0;
	border-radius: 10px;
}

.kno-tag a{
	color: black;
}
.kno-tag a:hover{
	color: #37CF6B;
	text-decoration: none;
}

.kno-ifm{
	border-top: 2px solid #37CF6B;
	padding-top: 15px;
}

.kno-ifm-title{
	font-weight: bold;
	font-size: 30px;
	margin-bottom: 15px;
}

.kno-ifm p{
	font-size: 20px;
	font-family: "微软雅黑";
	
}
.kno-tag-title{
	font-size: 25px;
	font-family: "微软雅黑";
	padding-bottom: 20px;
	border-bottom: dashed 1px #adadad;
}
.kno-tag table{
	width: 100%;
	height: 200px;
	margin: 20px 0;
}

/*ask界面*/

.a-d-all a{
	color: white;
}

.a-d-all a:hover{
	text-decoration: none;
	color: white;
}

.yzm{
	float: right;
	margin-top: -30px;
	margin-right: 70px;
	
}
.yzm a{
	font-size: 10px;
	color: #ADADAD;
}

#checkCode{

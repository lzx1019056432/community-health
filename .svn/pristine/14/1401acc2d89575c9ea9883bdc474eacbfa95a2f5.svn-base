<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.UserDao">
	<select id="login" resultType="us">
		select * from user where user_name=#{0} and user_password=#{1};
	</select>
	<insert id="register" parameterType="us" keyColumn="user_id" keyProperty="true" >
	insert into user values (DEFAULT,#{user_name},#{user_groupid},#{user_password},#{user_image},#{user_nike})
	</insert>
	<update id="revise" parameterType="us">
	update user set user_name=#{user_name},user_password=#{user_password},user_groupid=#{user_groupid},user_image=#{user_image},user_nike=#{user_nike} where user_id=#{user_id};
	</update>
	<select id="doc" resultType="us">
		select * from user where user_groupid="3";
	</select>
</mapper>